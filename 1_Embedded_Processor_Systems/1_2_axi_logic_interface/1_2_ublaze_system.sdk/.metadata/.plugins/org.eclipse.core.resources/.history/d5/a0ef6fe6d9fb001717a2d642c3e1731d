/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xparameters.h"
#include "xgpio.h"
#include "xil_printf.h"

#include "scanvalue.h"

//GPIO Interface Struct
XGpio gpio_iface;

void print(char *str);

int main()
{
    init_platform();
    print("Reset system.\n\r");

    int status = XGpio_Initialize(&gpio_iface, XPAR_AXI_GPIO_0_DEVICE_ID);
    if(status == XST_SUCCESS)
    	printf("GPIO successfully initialized!\n\r");
    else
    	printf("Problem initializing GPIO...\n\r");

    XGpio_SetDataDirection(&gpio_iface, 1, 0);
    XGpio_SetDataDirection(&gpio_iface, 2, 1);
    XGpio_DiscreteWrite(&gpio_iface, 1, 0x0000FFFF);

    u32 val = 0, led = 0;

    while(1){
        val = XGpio_DiscreteRead(&gpio_iface, 2);
    	xil_printf("Read switch values: %x Writing to LEDs.. \n\r", val);
    	printf("Enter value for LEDs: \n");

    	//Scan values from user terminal input and write to LEDs
    	led = scanValue();
    	xil_printf("Read switch values: %x Writing to LEDs.. \n\r", val);
        XGpio_DiscreteWrite(&gpio_iface, 1, led);
    }

    cleanup_platform();
    return 0;
}
